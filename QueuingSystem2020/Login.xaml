<Window x:Class="QueuingSystem2020.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="登录" Height="300" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Margin="0,10,0,20" Text="登录排队机系统" FontSize="24" HorizontalAlignment="Center"></TextBlock>
            <StackPanel Margin="0,10" Orientation="Horizontal">
                <TextBlock Margin="10,0" Text="用户名:" FontSize="24"></TextBlock>
                <TextBox Name="UsernameBox" Margin="10,0" Width="200" TextWrapping="Wrap" FontSize="24"></TextBox>
            </StackPanel>
            <StackPanel Margin="0,10" Orientation="Horizontal">
                <TextBlock Margin="10,0" Text="密   码 :" FontSize="24"></TextBlock>
                <PasswordBox Name="PasswordBox" Margin="5,0,0,0" Width="200" FontSize="24"></PasswordBox>
            </StackPanel>
            <Button Margin="0,30" Content="登录" FontSize="24" Height="40" Width="150" IsDefault="True" Click="Login_Click"></Button>
        </StackPanel>
    </Grid>

</Window>
